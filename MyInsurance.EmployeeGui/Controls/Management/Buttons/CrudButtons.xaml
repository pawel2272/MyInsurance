<UserControl x:Class="MyInsurance.EmployeeGui.Controls.Management.Buttons.CrudButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyInsurance.EmployeeGui.Controls.Management.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnNew" Content="Nowy" Style="{StaticResource hugeButton}" Grid.Row="5" Grid.Column="1"/>
        <Button x:Name="btnEdit" Content="Edytuj" Style="{StaticResource hugeButton}" Grid.Row="5" Grid.Column="3"/>
        <Button x:Name="btnDelete" Content="Usuń" Style="{StaticResource hugeButton}" Grid.Row="5" Grid.Column="5"/>
    </Grid>
</UserControl>
