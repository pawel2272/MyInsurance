<Window x:Class="MyInsurance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyInsurance" xmlns:start="clr-namespace:MyInsurance.Controls.Start"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="NoResize" Height="450" Width="700">
    <Grid>
        <start:LoginControl x:Name="lcLogin" Background="DarkOrange" ButtonsForeground="Orange" ButtonsBackground="Black" FontFamily="Century Gothic" RegisterControl="{Binding ElementName=rcRegister}"/>
        <start:RegisterControl x:Name="rcRegister" Background="DarkOrange" ButtonsForeground="Orange" ButtonsBackground="Black" FontFamily="Century Gothic" Visibility="Hidden" LoginControl="{Binding ElementName=lcLogin}"/>
    </Grid>
</Window>
